<Page x:Class="BeautySalon.Pages.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BeautySalon.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="HomePage">

    <Grid>
        <Button Content="Клиенты" 
Background="#FFFF4A6D" Foreground="White" 
FontWeight="Bold" Padding="10,5" Margin="0,90,0,210"
Width="150" Height="30"
HorizontalAlignment="Center"
Click="ClientButton_Click"/>
        <Button Content="Услуги" 
Background="#FFFF4A6D" Foreground="White" 
FontWeight="Bold" Padding="10,5" Margin="0,130,0,175"
Width="150" Height="30"
HorizontalAlignment="Center"
Click="ServiceButton_Click"/>
        <Button Content="Учет посещений" 
Background="#FFFF4A6D" Foreground="White" 
FontWeight="Bold" Padding="10,5" Margin="0,170,0,140"
Width="150" Height="30"
HorizontalAlignment="Center"
Click="ClientServiceButton_Click"/>
    </Grid>
</Page>
